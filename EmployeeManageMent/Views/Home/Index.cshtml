@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
    
}

<div class="row">
    <a class="btn btn-outline-info btn-sm text-end"   asp-controller="Home" asp-action="Create">Create</a>
        
            @foreach (var a in Model)
            {
                var picture = "~/uploads/" + (a.Picture ?? "no-picture.png");
                <div class="col-4">

                    <div class="card-dark">
                        <div class="card m-3 mb-4">
                            <div class="card-header">
                                <h3>@a.Name</h3>
                            </div>
                            "<img class="card-img-top rounded"  width="100" height="250" src="@picture" asp-append-version="true">

                             <div class="card-footer text-center">

                                 <a asp-controller="Home" asp-action="Details" asp-route-id="@a.Id" class="btn btn-primary btn-sm">Details</a>
                                 <a asp-controller="Home" asp-action="Edit" asp-route-id="@a.Id" class="btn btn-primary btn-sm">Edit</a>
                                 <a asp-controller="Home" asp-action="Delete" method="post" asp-route-id="@a.Id" class="btn btn-danger btn-sm">Delete</a>
                                
                             </div>
                          

                            


</div>
                    </div>
                </div>
             }
</div>
@section styles
    {
<environment include="Development,Production">

    <link href="~/libs/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</environment>
}


