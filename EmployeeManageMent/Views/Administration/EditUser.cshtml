@model EditUserViewModel
@{
    ViewBag.Title = "Edit User";


}



<div class="row mb-3 p-3">
    <div class="col-md-8 p-5 m-auto">
        <div class="card p-3">
            <h4 class="text-center">Edit User</h4>
            <form method="post">
                <div class="card mb-2">

                    <div class="form-group row p-2">
                        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                        <div class="col-10">

                            <input asp-for="Id" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row p-2">
                        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                        <div class="col-10">

                            <input asp-for="UserName" class="form-control" placeholder="" />
                        </div>
                        @*<span asp-validation-for="Price" class="text-danger"></span>*@
                    </div>
                    <div class="form-group row p-2">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-10">

                            <input asp-for="Email" class="form-control" placeholder="" />
                        </div>
                        @*<span asp-validation-for="Price" class="text-danger"></span>*@
                    </div>
                    <div class="form-group row p-2">
                        <label asp-for="City" class="col-sm-2 col-form-label"></label>
                        <div class="col-10">

                            <input asp-for="City" class="form-control" placeholder="" />
                        </div>
                        @*<span asp-validation-for="Price" class="text-danger"></span>*@
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group row p-2">
                        <div class="custom-file ">
                            <input type="submit" value="Update" class="btn btn-primary" />

                            <a asp-controller="Administration" asp-action="ListUsers" class="btn btn-primary">Cancel</a>
                        </div>
                    </div>
                </div>


                <div class="card">
                    <div class="card-header">
                        <h3>User roles</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <h5 class="card-title">@role</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Administration" asp-action="EditUserInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Roles</a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3>User Claims</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Claims.Any())
                        {
                            foreach (var user in Model.Claims)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Administration" asp-action="EditUserInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Claims</a>
                    </div>
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>

    </div>

</div>

