@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<div class="row mb-3 p-3">
    <div class="col-md-6 p-5 m-auto">
        <div class="card p-3">
            <form asp-controller="Account" method="post">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <h3 class="text-center">Registration Form</h3>
                <div class="form-group row p-2">
                    <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-9">

                        <input asp-for="Name" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                    <div class="col-9">

                        <input asp-for="Email" class="form-control" placeholder="" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row p-2">
                    <label asp-for="City" class="col-sm-3 col-form-label"></label>
                    <div class="col-9">

                        <input asp-for="City" class="form-control" placeholder="" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row p-2">
                    <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                    <div class="col-9">

                        <input asp-for="Password" class="form-control" placeholder="" />
                    </div>

                </div>
                <div class="form-group row p-2">
                    <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label"></label>
                    <div class="col-9">

                        <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                    </div>

                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row p-2">
                    <div class="form-group p-2">
                        <input type="submit" value="Register" class="btn btn-primary" />
                    </div>
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>

    </div>
</div>
