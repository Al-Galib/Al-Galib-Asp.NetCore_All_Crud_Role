@model LoginViewModel
@{
    ViewBag.Title = "User Login";
}
<div class="row mb-3 p-3">
    <div class="col-md-7 p-5 m-auto">
        <div class="card p-3">
            <form asp-controller="Account" method="post">

                <h3 class="text-center">Login Form</h3>
                <div class="form-group row p-2">
                    <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-9">

                        <input asp-for="Name" class="form-control" placeholder="" autocomplete="off" />
                    </div>

                </div>

                @*<div class="form-group row p-2">
            <label asp-for="Email" class="col-sm-3 col-form-label"></label>
            <div class="col-9">

                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>

        </div>*@

                <div class="form-group row p-2">
                    <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                    <div class="col-9">

                        <input asp-for="Password" class="form-control" />
                    </div>

                </div>


                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row p-2 text-center">
                    <div class="form-group p-2">
                        <input type="submit" value="Login" class="btn btn-outline-info" />
                    </div>
                </div>
                <div class="form-group row p-2">
                    <div class="checkbox text-center">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>

            </form>
            <div class="text-center p-3">--- or sign in with ---</div>
            <div class="text-center">
                @{
                    if (Model.ExternalLogins.Count == 0)
                    {
                        <div>No External logins configured</div>
                    }
                    else
                    {

                        <Form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                            <div>
                                @foreach (var e in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-outline-info" name="e" value="@e.Name"
                                            title=" Login by @e.DisplayName">
                                        @e.DisplayName
                                        @*<i class="bi bi-google"></i>*@
                                    </button>


                                }

                            </div>
                        </Form>
                    }
                }
            </div>
            <div>
                <a asp-action="Index" >Back to List</a>
            </div>
        </div>

    </div>

</div>
@section styles
    {
    <environment include="Development,Production">

        <link href="~/libs/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    </environment>

}